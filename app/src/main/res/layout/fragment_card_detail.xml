<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context=".controllers.userNavigation.settings.cards.CardDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:baselineAligned="false">

        <android.support.design.widget.TextInputLayout
            android:layout_weight="1.10"
            android:layout_height="72dp"
            android:layout_width="match_parent"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            tools:ignore="InefficientWeight">

            <EditText
                android:id="@+id/card_detail_card_number"
                android:drawableRight="@drawable/ic_micro_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_card_number"
                android:textColorHint="@color/greenEzypayColor"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <android.support.design.widget.TextInputLayout
            android:layout_weight="0.5"
            android:layout_height="72dp"
            android:layout_width="match_parent">

            <EditText
                android:id="@+id/card_detail_exp_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:inputType="phone"
                android:hint="@string/prompt_exp_date"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_weight="0.5"
            android:layout_height="72dp"
            android:layout_width="match_parent">

            <EditText
                android:id="@+id/card_detail_cvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_cvv"
                android:maxLength="3"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="number"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:background="@color/greenEzypayColor"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:id="@+id/card_detail_action" />
</LinearLayout>
