<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="1dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cell_user_history_commerce_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/cell_user_history_commerce_image"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorBackgroundViews"
                android:id="@+id/cell_user_history_commerce_name"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="end"
                android:textColor="@color/greenEzypayColor"
                android:id="@+id/cell_user_history_payment_cost"/>

            </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>