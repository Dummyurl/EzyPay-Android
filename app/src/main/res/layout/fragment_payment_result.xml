<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ezypayinc.ezypay.controllers.userNavigation.payment.PaymentResultFragment">

    <RelativeLayout
        android:id="@+id/successfully_layout_payment_result_fragment"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_black_button">
        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circular_green_button">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkmark"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/go_home_button_payment_result_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/action_go_home_screen"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_below="@id/successfully_layout_payment_result_fragment"
        android:background="@drawable/button_green_background"/>

</RelativeLayout>
