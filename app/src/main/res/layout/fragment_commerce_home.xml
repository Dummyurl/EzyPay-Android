<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezypayinc.ezypay.controllers.commerceNavigation.commerce.CommerceHomeFragment">
    
    <ImageButton
        android:id="@+id/commerce_home_imageView"
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="@string/label_currently_signed_in"/>

        <TextView
            android:id="@+id/commerce_home_user_logged_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/greenEzypayColor" />

        <TextView
            android:id="@+id/commerce_home_change_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:gravity="center"
            android:text="@string/label_change_employee"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="20dp"
            android:background="#c3c3c3"/>

        <Button
            android:id="@+id/commerce_home_generate_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/button_green_background"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/action_generate_qr_code"/>



    </LinearLayout>

</RelativeLayout>
