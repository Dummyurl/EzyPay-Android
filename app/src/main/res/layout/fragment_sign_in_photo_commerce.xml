<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezypayinc.ezypay.controllers.login.commerce.SignInPhotoCommerceFragment">

    <ImageView
        android:id="@+id/image_view_sign_in_photo_commerce_fragment"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/image_profile_circle"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_sign_in_photo_commerce_fragment"
        android:orientation="vertical">
        <NumberPicker
            android:id="@+id/number_picker_table_quantity_photo_commerce_fragment"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/label_tables_warning_message"/>

        <Button
            android:id="@+id/next_button_photo_commerce_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_green_background"
            android:textColor="@color/white"
            android:text="@string/action_sign_in_user_information_next"/>
    </LinearLayout>

</RelativeLayout>
