<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundViews"
    tools:context="com.ezypayinc.ezypay.controllers.login.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ezypay_logo_letters"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#A2A2A2"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:id="@+id/activity_main_btn_signIn"
            android:layout_height="match_parent"
            android:background="@drawable/button_white_background"
            android:text="@string/action_sign_in"
            android:textColor="@color/colorBackgroundViews"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/activity_main_btn_signInRestaurant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_green_background"
            android:textColor="@color/colorBackgroundViews"
            android:text="@string/sign_in_as_restaurant"
            android:layout_weight="1"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</RelativeLayout>
